{
  "name": "opusgl",
  "version": "0.0.0",
  "description": "A minimal rendering library",
  "keywords": [
    "3d",
    "rendering",
    "webgl",
    "webxr",
    "shaders"
  ],
  "author": "Cody Bennett (https://github.com/codyjasonbennett)",
  "homepage": "https://github.com/CodyJasonBennett/opusgl",
  "repository": "https://github.com/CodyJasonBennett/opusgl",
  "license": "MIT",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "private": true,
  "devDependencies": {
    "@swc/cli": "^0.1.55",
    "@swc/core": "^1.2.145",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "@webgpu/types": "^0.1.13",
    "eslint": "^8.10.0",
    "prettier": "^2.5.1",
    "recursive-readdir": "^2.2.2",
    "rimraf": "^3.0.2",
    "terser": "^5.11.0",
    "typescript": "^4.5.5",
    "vitest": "^0.5.7"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc && node bin/build",
    "postbuild": "npm run analyze",
    "test": "vitest run",
    "lint": "eslint src/**/*.ts && prettier src/**/*.ts --check",
    "lint-fix": "prettier src/**/*.ts --write && eslint --fix src/**/*.ts",
    "analyze": "node bin/analyze"
  }
